{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "@table": "products",
  "type": "object",
  "properties": {
    "id": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "_type_name": {
      "type": "string"
    },
    "_weight": {
      "type": "object",
      "properties": {
        "weight": {
          "type": "number"
        },
        "weight_unit": {
          "type": "string",
          "enum": [
            "g",
            "kg"
          ]
        }
      }
    },
    "_colors": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  }
}